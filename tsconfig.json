{
  "compilerOptions": {
    "target": "es2017",                 
    "module": "esnext",                 
    "moduleResolution": "node",          
    "jsx": "react-jsx",                  
    "strict": true,                    
    "esModuleInterop": true,             
    "skipLibCheck": true,               
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                 
    "sourceMap": true,
    "types": ["jest", "@testing-library/jest-dom"]
                 
  },
  "include": ["src/**/*"],               
  "exclude": ["node_modules", "dist"]    
}
